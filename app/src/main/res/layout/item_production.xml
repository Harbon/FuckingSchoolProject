<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="8dp">
    <ImageView
        android:layout_width = "300dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:id="@+id/productionImage"
        android:src="@drawable/calendar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:id="@+id/productionName"
        android:text="name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productionPrice"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="￥ 100"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="积分：1000"
        android:id="@+id/productionScorePrice"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:background="@drawable/resigter_selector"
        android:paddingTop="8dp"
        android:textColor="#2d91e1"
        android:id="@+id/buttonAddToCart"
        android:text="加入购物车"/>

</LinearLayout>